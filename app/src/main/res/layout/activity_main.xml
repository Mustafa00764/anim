<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:gravity="center"
       android:layout_weight="1">
<com.airbnb.lottie.LottieAnimationView
    android:id="@+id/lav_animation"
    android:layout_width="match_parent"
    app:lottie_fileName="anim1.json"
    app:lottie_loop="true"
    android:visibility="visible"
    android:layout_height="250dp"/>
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5">
        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/b_facebook"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="#3F51B5"
                android:text="facebook"
                android:textSize="10sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/b_twitter"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="twitter"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/b_facebook"
                android:background="#3F51B5"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/b_youtube"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/b_twitter"
                android:background="#3F51B5"
                android:text="youtube"
                app:backgroundTint="@null" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>